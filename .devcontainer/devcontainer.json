{
    "name": "smartplaylist/app",
    "build": {
        "dockerfile": "../app/Dockerfile"
    },
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "Gruntfuggly.todo-tree",
                "charliermarsh.ruff",
                "donjayamanne.python-environment-manager",
                "GitHub.copilot",
                "GitHub.copilot-chat",
